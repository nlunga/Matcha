<body>
<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a href="/dashboard" class="navbar-brand">Matcha</a>
    <a href="/logout" class="nav-link active">logout</a>
    <a href="/chat" class="nav-link active"><i class="fa fa-comments" style="color: grey;" aria-hidden="true"></i></a>
    <div class="dropdown">
        <a href="#" class="dropbtn">
        <i class="fa fa-bell" style="color: grey;" aria-hidden="true"></i>
        </a>
        <div class="dropdown-content">
        <% if (getNotified !== undefined) { %>
            <% getNotified.forEach(function (result) { %>
            <a href="#"><%=result%></a>
            <% }) %>
        <% } %>
        </div>
    </div>
</nav>

<section>
    <ul id="messages"></ul>
    <form action="">
      <input id="m" autocomplete="off" /><button>Send</button>
    </form>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>
  $(function () {
    var socket = io();

    $('form').submit(function(){
        socket.emit('chat message', $('#m').val());
        $('#m').val('');
        return false;
    });
    
    socket.on('chat message', function(msg){
        $('#messages').append($('<li>').text(msg));
        window.scrollTo(0, document.body.scrollHeight);
    });
  });
</script>
