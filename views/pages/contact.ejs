<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <title><%=headed%></title>
    <style>
        h2{
            font-size: 18px;
            padding: 10px 20px;
            color: #575ed8;
        }

        #matcha-chat{
            max-width: 600px;
            margin: 30px auto;
            border: 1px solid #ddd;
            box-shadow: 1px 3px 5px rgba(0,0,0,0.05);
            border-radius: 2px;
        }

        #chat-window{
            height: 400px;
            overflow: auto;
            background: #f9f9f9;
        }

        #contactOutput p{
            padding: 14px 0px;
            margin: 0 20px;
            border-bottom: 1px solid #e9e9e9;
            color: #555;
        }

        #feedback p{
            color: #aaa;
            padding: 14px 0px;
            margin: 0 20px;
        }

        #contactOutput strong{
            color: #575ed8;
        }

        label{
            box-sizing: border-box;
            display: block;
            padding: 10px 20px;
        }

        input{
            padding: 10px 20px;
            box-sizing: border-box;
            background: #eee;
            border: 0;
            display: block;
            width: 100%;
            background: #fff;
            border-bottom: 1px solid #eee;
            font-family: Nunito;
            font-size: 16px;
        }

        button{
            background: #575ed8;
            color: #fff;
            font-size: 18px;
            border: 0;
            padding: 12px 0;
            width: 100%;
            border-radius: 0 0 2px 2px;
        }
    </style>
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a href="/dashboard" class="navbar-brand">Matcha</a>
        <a href="/chat" class="nav-link active"><i class="fa fa-comments" style="color: grey;" aria-hidden="true"></i></a>
        <a href="/contact" class="nav-link active"><i class="fa fa-address-book" style="color: grey;" aria-hidden="true"></i></a>
        <div class="dropdown">
            <a href="#" class="dropbtn">
                <i class="fa fa-bell" style="color: grey;" aria-hidden="true"></i>
            </a>
            <!-- <div class="dropdown-content">
            <%// if (getNotified !== undefined) { %>
                <%// getNotified.forEach(function (result) { %>
                <a href="#"><%//=result%></a>
                <%// }) %>
            <%// } %>
            </div> -->
        </div>
        <a href="/logout" class="nav-link active">logout</a>
    </nav>
    <div id="matcha-chat">
        <div id="chat-window">
            <div id="contactOutput">
                <% if (users !== undefined) { %>
                    <% users.forEach(function (result) { %>
                        <p><a id="user" class="user" href="/?username=<%=(typeof result.username != "undefined" ? result.username : "")%>&room=nnilChat"><%=result.firstName%> <%=result.lastName%></a><a href="/chat/?username=<%=(typeof result.username != "undefined" ? result.username : "")%>&room=nnilChat" class="nav-link active"><i class="fa fa-comments" style="color: grey;" aria-hidden="true"></i></a></p>
                    <% }); %>
                <% } %>
            </div>
            <!-- <div id="feedback"></div> -->
        </div>
        <!--<label for="message"><%//=username%>:</label>
        <input type="hidden" name="handle" id="handle" value="<%//=(typeof username != "undefined" ? username : "")%>">
        <input type="text" name="message" id="message" placeholder="Message">
        <button id="send">Send</button> -->
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.9.4/qs.min.js" integrity="sha256-ijqLssetA1NMNjZ+w1zaUafQQLm4IW5OoM8O+4tatME=" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/contact.js"></script>
    <script src="/js/notifications.js"></script>
</body>
</html>