                <h1>Your Profile</h1>
                <!-- user name -->
                <div class="form-group">
                    <input type="text" class="form-control" name="firstName" placeholder="Enter your name" value="<%=(typeof data.firstName != "undefined" ? data.firstName : "")%>">
                </div>
                
                <div class="form-group">
                    <input type="hidden" class="form-control" name="username" placeholder="Enter your name" value="<%=(typeof data.username != "undefined" ? data.username : "")%>">
                </div>

                <!-- select your age -->
                <div class="form-group">
                    <label for="selectYourAge">Your age (between 18 and 50):</label>
                    <input type="number" name="age" min="18" max="50" value="<%=(typeof data.age != "undefined" ? data.age : "")%>" placehlder="18">
                </div>o
                
                <!-- Select your gender -->
                <label>What is your gender?</label>
                <div class="custom-control custom-radio">
                    <input type="radio" id="customRadio1" name="gender" class="custom-control-input" value="Male"> 
                    <label class="custom-control-label" for= "customRadio1">Male</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="customRadio2" name="gender" class="custom-control-input" value="Female"> 
                    <label class="custom-control-label" for="customRadio2">Female</label>
                </div>
                
                <!-- sexual orientation -->
                <div>
                    <label class="mdb-main-label primary">Sexual orientation</label>
                    <div>
                        <select class="mdb-select md-form colorful-select dropdown-primary" name="sexualOrientation">
                            <option name="default" value=""></option>
                            <option name="girls" value="girls">Girls</option>
                            <option name="boys" value="boys">Boys</option>
                            <option name="girlsAndBoys" value="both">Both</option>
                        </select>
                    </div>
                </div>
                <!-- Profile location -->
                <div>
                    <p class="h4 text-center" name="myLocation">My Location</p>
                    <label for="NameOfUser">City</label>
                    <input type="text" class="form-control" name="myCity">
                    <label for="NameOfUser">Suburb</label>
                    <input type="text" class="form-control" name="mySuburb">
                </div>
                
                <!-- interests tags -->
                <!-- <div class="form-group">
                    <p>Add interests to your profile</p>
                    <a href="/add_interest"><button type="button" class="btn btn-info">Add interests</button></a>
                </div> -->
                
                <div class="form-group">
                    <p>Add interests to your profile (seperated by a coma)</p>
                    <input type="text" name="interests" value="">
                    <!-- <a href="/add_interest"><button type="button" class="btn btn-info">Add interests</button></a> -->
                </div>

                <!-- Textarea  -->
                <div class="form-group">
                    <label for="Textarea">About you</label>
                    <textarea class="form-control" id="Textarea" name="bio" row="3"></textarea>
                </div> 
                
                <!-- submit button -->
                <a href="<%=data.link%>">Skip</a>
                <div class="form-group">
                    <button type="submit" name="<%=(typeof data.image != "undefined" ? "update" : "next")%>" value="<%=(typeof data.image != "undefined" ? "update" : "next")%>" class="btn btn-primary btn-lg btn-block"><%=(typeof data.image != "undefined" ? "Update" : "Next")%></button>
                </div>
            </div>
